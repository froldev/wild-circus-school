{% extends 'base.html.twig' %}

{% block title %}SchoolClass{% endblock %}

{% block body %}

    <section class="card border-secondary bg-primary text-white m-3">
        <h1 class="text-center text-uppercase p-3">
            {{ class.name|upper }}
        </h1>
    </section>

    <section class="m-3">
        <div class="card col-xs-10 offset-xs-1 col-md-8 offset-md-2 bg-primary text-white">
            <img class="card-img-top col-8 offset-2 mt-3 mb-2" src="{{ class.picture }}" alt="Card {{ class.name }}">
            <div class="card-body">
                <h5 class="card-title text-center">{{ class.name }}</h5>
                <p class="card-text text-center">Duration : {{ class.duration }} month</p>
                <p class="card-text text-center">Price : {{ class.price }} â‚¬</p>
                <p class="card-text text-center">From : {{ class.startDate|date('d-m-Y') }}</p>
                <p class="card-text text-center">{{ class.description }}</p>
            </div>
        </div>

        <h3 class="col-12 m-2 text-center">Choose your artist :</h3>
        <div class="row  d-flex justify-content-center">

            {% for artist in artists %}
                <div class="card col-4 bg-dark text-white">
                    <img class="mt-3" src="{{ artist.picture }}" alt="{{ artist.name }}" height="150px">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{ artist.name }}</h5>
                        <p class="card-text text-center">{{ artist.description }}</p>
                        {% if app.user %}
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-warning">Reserve</a>
                            </div>
                        {% else %}
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-outline-warning"
                                   href="{{ path('app_login') }}">Log In</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}

        </div>
    </section>

    <section class="m-3">
        <a class="btn btn-dark" href="{{ path('class_index') }}">back to list</a>
    </section>

{% endblock %}
