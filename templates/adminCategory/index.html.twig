{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <section class="card border-secondary bg-primary text-white m-3">
        <h1 class="text-center text-uppercase p-3">
            List of Categories
        </h1>
    </section>

    <section class="mr-4">
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary btn-lg"
               href="{{ path('admin_category_new') }}">Add a Category</a>
        </div>
    </section>

    <section id="card" class="m-3">
        <div class="row d-flex justify-content-around ">
            {% for category in categories %}
                <div class="card col-5 m-1">
                    <img class="card-img-top" height="200px" src="{{ category.picture }}" alt="Image {{ category.name|title }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name|title }}</h5>
                        <div class="row">
                            <a class="btn btn-outline-primary col-6"
                               href="{{ path('admin_category_edit', {'id': category.id}) }}">
                                Modify
                            </a>
                            {{ include('adminCategory/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            {% else %}
                <div>
                    <h5>No records found</h5>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
