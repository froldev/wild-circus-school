{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <section class="card border-secondary bg-primary text-white m-3">
        <h1 class="text-center text-uppercase p-3">
            List of Categories
        </h1>
    </section>

    <section class="mr-4">
        <div class="d-flex justify-content-end">
            <a class="btn btn-outline-primary btn-lg"
               href="{{ path('admin_category_new') }}">Add a Category</a>
        </div>
    </section>

    <section id="card" class="m-3">
        <div class="row d-flex justify-content-around ">
            {% for category in categories %}
                <div class="card col-xs-11 col-md-5 flex-row m-1">
                    <div class="card-body col-9 align-self-center">
                        <h5 class="card-title">
                            {{ category.name|title }}
                        </h5>
                    </div>
                    <div class="align-self-center col-2">
                        <a class="btn btn-outline-primary"
                           href="{{ path('admin_category_show', {'id': category.id}) }}">
                            Show
                        </a>
                        {{ include('adminCategory/_delete_form.html.twig') }}
                    </div>
                </div>
            {% else %}
                <div>
                    <h5>No records found</h5>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}
