{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    <section class="card border-secondary bg-primary text-white m-3">
        <h1 class="text-center text-uppercase p-3">
            {{ category.name|upper }}
        </h1>
    </section>

    <section class="m-3">
        <div class="card col-xs-10 offset-xs-1 col-md-8 offset-md-2">
            <img class="card-img-top" src="{{ category.picture }}" alt="Card {{ category.name }}">
            <div class="card-body">
                <h5 class="card-title">{{ category.name }}</h5>
                <p>Trainings :
                <ul>
                    {% for class in category.schoolClass %}
                        <li>{{ class.name }}</li>
                    {% endfor %}
                </ul>
                </p>
                <a href="{{ path('admin_category_index') }}" class="btn btn-outline-dark col-4 m-1">Back</a>
                <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary col-4 m-1">Modify</a>
            </div>
        </div>
    </section>

{% endblock %}
