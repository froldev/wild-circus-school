{% extends 'base.html.twig' %}

{% block title %}Internship{% endblock %}

{% block body %}

    <section class="card border-secondary bg-primary text-white m-3">
        <h1 class="text-center text-uppercase p-3">
            {{ internship.name|upper }}
        </h1>
    </section>

    <section class="m-3">
        <div class="card col-xs-10 offset-xs-1 col-md-8 offset-md-2">
            <img class="card-img-top" src="{{ internship.picture }}" alt="Card {{ internship.name }}">
            <div class="card-body">
                <h5 class="card-title">{{ internship.name }}</h5>
                <p class="card-text">{{  internship.description }}</p>
                <p class="card-text">From {{ internship.startDate|date("d/m/Y") }}</p>
                <a href="{{ path('admin_internship_index') }}" class="btn btn-outline-dark col-4 m-1">Back</a>
                <a href="{{ path('admin_internship_edit', {'id': internship.id}) }}" class="btn btn-outline-primary col-4 m-1">Modify</a>
            </div>
        </div>
    </section>

{% endblock %}
