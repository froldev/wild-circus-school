<form method="post" action="{{ path('admin_internship_delete', {'id': internship.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ internship.id) }}">
    <button class="btn btn-outline-dark">Delete</button>
</form>
