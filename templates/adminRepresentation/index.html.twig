{% extends 'base.html.twig' %}

{% block title %}Representation index{% endblock %}

{% block body %}
    <h1>Representation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>StartDate</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for representation in representations %}
            <tr>
                <td>{{ representation.id }}</td>
                <td>{{ representation.name }}</td>
                <td>{{ representation.description }}</td>
                <td>{{ representation.startDate|date("d/m/Y") }}</td>
                <td>{{ representation.picture }}</td>
                <td>
                    <a href="{{ path('admin_representation_show', {'id': representation.id}) }}">show</a>
                    <a href="{{ path('admin_representation_edit', {'id': representation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_representation_new') }}">Create new</a>
{% endblock %}
