{% extends 'base.html.twig' %}

{% block title %}SchoolClass index{% endblock %}

{% block body %}
    <h1>SchoolClass index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Duration</th>
                <th>Price</th>
                <th>StartDate</th>
                <th>Picture</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for school_class in school_classes %}
            <tr>
                <td>{{ school_class.id }}</td>
                <td>{{ school_class.name }}</td>
                <td>{{ school_class.duration }}</td>
                <td>{{ school_class.price }}</td>
                <td>{{ school_class.startDate }}</td>
                <td>{{ school_class.picture }}</td>
                <td>{{ school_class.description }}</td>
                <td>
                    <a href="{{ path('school_class_show', {'id': school_class.id}) }}">show</a>
                    <a href="{{ path('school_class_edit', {'id': school_class.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('school_class_new') }}">Create new</a>
{% endblock %}
