{% extends 'base.html.twig' %}

{% block title %}Inscription index{% endblock %}

{% block body %}

    <section id="classes" class="m-5">
        <div class="row">

            <h2 class="m-3">My Inscriptions</h2>

            <div class="row">
                {% for inscription in inscriptions %}
                    <div class="col-xs-6 col-md-3">
                        <div class="card m-1 border-secondary bg-primary text-white">
                            <div class="card-body">
                                <h5 class="card-title text-center">{{ inscription.id }}</h5>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <h1>Inscription index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IsValidate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.id }}</td>
                <td>{{ inscription.isValidate ? 'Yes' : 'No' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
