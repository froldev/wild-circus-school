{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <section class="card border-secondary bg-primary text-white m-3">
        <h1 class="text-center text-uppercase p-3">
            {{ user.lastName|upper }} {{ user.firstName|title }}
        </h1>
    </section>

    <section class="m-3">
        <div class="card col-xs-10 offset-xs-1 col-md-8 offset-md-2">
            <div class="card-body">
                <h5 class="card-title">
                    {{ user.civility }} {{ user.lastName|upper }} {{ user.firstName|title }}
                </h5>
                <p class="card-text">
                    {{ user.email }}
                </p>
                <a href="{{ path('admin_administrator_index') }}" class="btn btn-outline-dark col-4 m-1">Back</a>
                <a href="{{ path('admin_administrator_edit', {'id': user.id}) }}" class="btn btn-outline-primary col-4 m-1">Modify</a>
            </div>
        </div>
    </section>

{% endblock %}
